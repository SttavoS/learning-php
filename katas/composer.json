{
    "name": "sttavos/katas",
    "description": "Projeto para guardar os katas resolvidos no CodeWars",
    "type": "library",
    "authors": [
        {
            "name": "Gustavo Schneider",
            "email": "gustavo.schneider.dev@gmail.com"
        }
    ],
    "require-dev": {
        "phpunit/phpunit": "^12",
        "squizlabs/php_codesniffer": "^3.13",
        "phan/phan": "^5.5"
    },
    "autoload": {
        "psr-4": {
            "Katas\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Katas\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit",
        "cs": "phpcs --standard=PSR12 src/",
        "phan": "phan --allow-polyfill-parser"
    }
}
